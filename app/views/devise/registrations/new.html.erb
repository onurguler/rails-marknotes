<div class="flex items-center justify-center min-h-screen">
  <div class="border p-6 bg-white rounded-lg shadow-md">
    <h2 class="mb-4 py-2 text-center text-2xl font-bold border-b">Sign Up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { role: 'form', class: 'max-w-sm w-full' }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mb-4">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'px-4 py-1 w-full border-2 rounded-full focus:outline-none' }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: 'px-4 py-1 w-full border-2 rounded-full focus:outline-none' } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: 'px-4 py-1 w-full border-2 rounded-full focus:outline-none' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", :class=> 'px-4 py-1 w-full bg-blue-500 text-white font-semibold rounded-full focus:outline-none' %>
      </div>
    <% end %>

    <p class="mt-4">
      Already have an account? 
      <span class="text-blue-500"><%= render "devise/shared/links" %></span>
    </p>
  </div>
</div>
