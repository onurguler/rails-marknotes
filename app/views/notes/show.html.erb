<div class="mx-auto p-4 max-w-6xl">
  <h1 class="mb-4 text-4xl font-bold border-b"> <%= @note.title %> </h1>
  <h1 class="mb-4 text-xl font-semibold"> <%= @note.subtitle %> </h1>
  <div class="mb-4"> <%= @note.content %> </div>
  <%= link_to "Edit", edit_note_path(@note), class: 'mt-4 bg-blue-500 px-4 py-1 text-white font-semibold text-center rounded hover:bg-blue-600 cursor-pointer' %>
  <%= link_to "Delete", note_path(@note), class: 'bg-red-500 px-4 py-1 text-white font-semibold text-center rounded hover:bg-red-600 cursor-pointer', :method => :delete %>
</div>
